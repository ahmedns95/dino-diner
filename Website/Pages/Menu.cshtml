@page
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>
<div class="row">
    <div class="column">
        <h2>Combo</h2>
        @foreach (var combo in Model.Menu.AvailableCombos)
        {
            <div class="menu-item">
                <h3>@combo.ToString()</h3>
                <p>Calories: @combo.Calories </p>
                <p>Price: @combo.Price</p>
                @foreach (string s in combo.Ingredients)
                {
                    <p>@s</p>
                }
                <p>Drink: @Model.Menu.Sodasaurus</p>
                <p>Sides: @Model.Menu.Fryceritops</p>
            </div>
        }
    </div>
    <div class="column">
        <h2>Entrees</h2>
        @foreach (var Entree in Model.Menu.AvailableEntrees)
        {
            <div class="menu-item">
                <h3>@Entree.ToString()</h3>
                @foreach (string s in Entree.Ingredients)
                {
                    <p>@s</p>
                }
                <p>Calories: @Entree.Calories </p>
                <p>Price: @Entree.Price</p>
            </div>
        }
    </div>
    <div class="column">
        <h2>Sides</h2>
        @foreach (var side in Model.Menu.AvailableSides)
        {
            <div class="menu-item">
                <h3>@side.ToString()</h3>
                @foreach (string s in side.Ingredients)
                {
                    <p>@s</p>
                }
                <p>Calories: @side.Calories </p>
                <p>Price: @side.Price</p>
            </div>

        }
        <h2>Drinks</h2>
        @foreach (var drink in Model.Menu.AvailableDrinks)
        {
            <div class="menu-item">
                <h3>@drink.ToString()</h3>
                @foreach (string s in drink.Ingredients)
                {
                    <p>@s</p>
                }
                <p>Calories: @drink.Calories</p>
                <p>Price: @drink.Price</p>
            </div>
        }
    </div>
    <div class="column">
        <form method="post">
            <input type="text" name="search" id="search" value="@Model.search" />
            <input type="submit" name="Search" />
            <input type="reset" value="Clear" />
            <input type="submit" name="filter" id="filter" value="ApplyFilter" />
            <div class="menu-item">
                <h1>Menu Category</h1>
                <label>
                    <input type="checkbox" name="filter" value="Combo" />
                    Combo
                </label>
                <label>
                    <input type="checkbox" name="Entree" value="Entree" />
                    Entree
                </label>
                <label>
                    <input type="checkbox" name="Side" value="Side" />
                    Side
                </label>
                <label>
                    <input type="checkbox" name="Drink" value="Drink" />
                    Drink
                </label>
                <h1>Price</h1>
                <label>
                    Min
                    <input type="number" min="0" max="10" step="0.1" name="minIMDB" value="" />
                </label>
                <label>
                    Max
                    <input type="number" min="0" max="10" step="0.1" name="maxIMDB" value="" />
                </label>
            </div>
        </form>
    </div>
</div>
