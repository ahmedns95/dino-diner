<Page x:Class="PointOfSale.CombosSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CombosSelection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="MinWidth" Value="140"></Setter>
                <Setter Property="MinHeight" Value="140"></Setter>
            </Style>
        </WrapPanel.Resources>
        <Button Click="SelectSize" Grid.Row="0" Grid.Column="0">Brontowrst Combo</Button>
        <Button Click="SelectSize" Grid.Row="0" Grid.Column="0">Dino-Nuggets Combo</Button>
        <Button Click="SelectSize" Grid.Row="0" Grid.Column="0">Steakosaurus Combo</Button>
        <Button Click="SelectSize" Grid.Row="0" Grid.Column="0">T-Rex King Burger Combo</Button>
        <Button Click="SelectSize" Grid.Row="0" Grid.Column="0">Prehistoric PB&amp;J Combo</Button>
        <Button Click="SelectSize" Grid.Row="0" Grid.Column="0">Pterodacty Wings Combo</Button>
        <Button Click="SelectSize" Grid.Row="0" Grid.Column="0">Veloci Combo</Button>
    </WrapPanel>
</Page>
